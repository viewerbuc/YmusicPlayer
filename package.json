{
  "name": "ymusicplayer",
  "version": "0.1.0",
  "description": "Cross-platform local music player built with Electron + React",
  "author": {
    "name": "Eric",
    "email": "erickent1995@gmail.com"
  },
  "private": true,
  "main": "electron/main.cjs",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"vite\" \"wait-on tcp:5173 && electron .\"",
    "build": "vite build --base=./",
    "dist:renderer": "vite build --base=./",
    "dist:win": "npm run dist:renderer && electron-builder --publish never --win nsis",
    "dist:linux": "npm run dist:renderer && electron-builder --publish never --linux AppImage deb --x64",
    "dist:mac": "npm run dist:renderer && electron-builder --publish never --mac dmg --universal",
    "dist:all": "npm run dist:renderer && electron-builder --publish never --win nsis --linux AppImage deb --x64 --mac dmg --universal",
    "preview": "vite preview",
    "start": "electron ."
  },
  "dependencies": {
    "framer-motion": "^11.15.0",
    "lucide-react": "^0.469.0",
    "music-metadata": "^10.6.4",
    "pinyin-pro": "^3.26.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.2",
    "electron": "^34.0.0",
    "electron-builder": "^25.1.8",
    "postcss": "^8.5.1",
    "tailwindcss": "^3.4.17",
    "vite": "^6.0.11",
    "wait-on": "^8.0.2"
  },
  "build": {
    "appId": "com.eric.ymusicplayer",
    "productName": "YMusicPlayer",
    "asar": true,
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "public/icon.png",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "public/icon.png",
        "to": "icon.png"
      }
    ],
    "extraMetadata": {
      "main": "electron/main.cjs"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "maintainer": "Eric <erickent1995@gmail.com>",
      "category": "AudioVideo",
      "icon": "public/icon.png"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "identity": null,
      "category": "public.app-category.music",
      "icon": "public/icon.png"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "icon": "public/icon.png"
    },
    "nsis": {
      "artifactName": "${productName}-Setup-${version}-${arch}.${ext}",
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
